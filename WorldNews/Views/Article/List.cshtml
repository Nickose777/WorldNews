@model IEnumerable<WorldNews.Models.Article.ArticleListViewModel>
@{
    var articles = Model
        .Select((x, i) => new { x, i })
        .GroupBy(p => (p.i / 2), p => p.x);
}

<p class="display-4">Политика</p>
<hr />
@foreach (var row in articles)
{
    <div class="row mb-4">
        @foreach (var item in row)
        {
            <div class="col-6 card-deck">
                <div class="card">
                    <img class="img-fluid img-article rounded card-img-top" src="@Url.Content(item.PhotoLink)" alt="Photo">
                    <div class="card-block">
                        <a href="@Url.Action("Details", "Article", new { id = Url.Encode(item.Id) })" class="heading text-justify">
                            <p class="mb-2">@item.Header</p>
                        </a>
                        <p class="text-justify text-article">@Html.DisplayFor(model => item.Description)</p>
                    </div>
                    <div class="card-footer text-right">
                        @Html.DisplayFor(model => item.DateCreated)
                    </div>
                </div>
            </div>
        }
    </div>
}