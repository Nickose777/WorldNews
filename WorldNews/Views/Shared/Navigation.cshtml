@using WorldNews.Helpers;

<div class="container">
    <div class="display-3 text-center">
        @Ajax.ActionLink("World News", "List", "Article",
            null,
            new AjaxOptions { OnSuccess = "onSuccess" },
            new { @class = "text-link" })
    </div>
</div>
<div class="container">
    <nav class="navbar navbar-toggleable-md navbar-light">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav w-100 justify-content-around category-heading">
                @foreach (string categoryName in ViewBag.Categories)
                {
                    <li class="nav-item">
                        @Ajax.ActionLink(categoryName, "List", "Article",
                                new
                                {
                                    @categoryName = categoryName
                                },
                                new AjaxOptions
                                {
                                    OnSuccess = "onSuccess"
                                },
                                new
                                {
                                    @class = "nav-link"
                                })
                    </li>
                }
                @{Html.RenderLogin(User);}
            </ul>
        </div>
    </nav>
    <hr class="mt-0" />
</div>