@using WorldNews.Helpers
@model IEnumerable<WorldNews.Models.BanReason.BanReasonListViewModel>

<p>
    @Ajax.ActionLinkGet("Create New", "Create", "BanReason")
</p>

<ul class="list-group">
    @foreach (var banReason in Model)
    {
        string className = banReason.IsEnabled
            ? "list-group-item-success"
            : "list-group-item-danger";

        <li class="list-group-item justify-content-between @className">
            @Ajax.ActionLinkGet(banReason.Name, "Edit", "BanReason", new { id = Url.Encode(banReason.Id) })
        </li>
    }
</ul>